# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Email Configuration (Required)
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password

# Frontend URL for CORS (Required)
FRONTEND_URL=http://localhost:3000

# AI Configuration (Choose one)
# Provider selection: 'ollama' (default) or 'openai'
AI_PROVIDER=ollama

# Option 1: OpenAI API
OPENAI_API_KEY=

# Option 2: Ollama (Local LLM)
# Recommended model (make sure to pull it first: `ollama pull llama3.2:1b-instruct`)
OLLAMA_MODEL=llama3.2:1b-instruct
OLLAMA_BASE_URL=http://localhost:11434

# Newsletter Configuration
NEWSLETTER_FROM_NAME=Your Newsletter Name
NEWSLETTER_SUBJECT_PREFIX=Weekly Tech Update

# Database (Optional - defaults to SQLite)
DATABASE_URL=sqlite:///./newsletter.db

# Development Settings
DEBUG=True
LOG_LEVEL=INFO
